<!DOCTYPE html>
<html lang="th">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>ตั้งคำถาม/หัวข้อ · CP KKU Study Notes</title>
  <link rel="stylesheet" href="/style.css" />
  <style>
    :root {
      --brand: #0d63a5;
      --muted: #6b7280;
      --border: #e5e7eb;
      --bg: #fff
    }

    .page {
      max-width: 820px;
      margin: 0 auto;
      padding: 16px
    }

    .card {
      background: #fff;
      border: 1px solid var(--border);
      border-radius: 12px;
      box-shadow: 0 2px 8px rgba(0, 0, 0, .04);
      overflow: hidden
    }

    .head {
      padding: 16px 16px 8px
    }

    .head h2 {
      margin: 0 0 .25rem 0;
      color: #0f3d7a
    }

    .head p {
      margin: 0;
      color: var(--muted);
      font-size: .95rem
    }

    form.thread-new {
      padding: 12px 16px 16px;
      display: flex;
      flex-direction: column;
      gap: 12px
    }

    .field {
      display: flex;
      flex-direction: column;
      gap: 6px
    }

    .label-row {
      display: flex;
      justify-content: space-between;
      align-items: center
    }

    .label-row label {
      font-weight: 600
    }

    .hint {
      color: var(--muted);
      font-size: .85rem
    }

    input[type="text"],
    textarea {
      width: 100%;
      padding: 10px 12px;
      border: 1px solid var(--border);
      border-radius: 10px;
      outline: none;
      background: #fff;
      box-sizing: border-box;
    }

    input[type="text"]:focus,
    textarea:focus {
      border-color: var(--brand);
      box-shadow: 0 0 0 3px rgba(13, 99, 165, .12);
      box-sizing: border-box;

    }

    textarea {
      min-height: 140px;
      resize: none;
      line-height: 1.6;
      box-sizing: border-box;

    }

    .counter {
      color: var(--muted);
      font-size: .85rem
    }

    .actions {
      display: flex;
      gap: 8px;
      justify-content: flex-end;
      padding: 4px 0 4px
    }

    .btn {
      padding: 10px 14px;
      border-radius: 10px;
      border: 1px solid var(--border);
      background: #f9fafb;
      color: #374151;
      text-decoration: none;
      cursor: pointer
    }

    .btn:hover {
      background: #eef2f7
    }

    .btn.primary {
      border-color: var(--brand);
      background: var(--brand);
      color: #fff
    }

    .btn[disabled] {
      opacity: .6;
      cursor: not-allowed
    }
  </style>
</head>

<body>
  <main class="page">
    <section class="card">
      <div class="head">
        <h2>ตั้งคำถาม/หัวข้อ</h2>
      </div>

      <form class="thread-new" method="post" action="/threads" id="thread-form" novalidate>
        <!-- หัวข้อ -->
        <div class="field">
          <div class="label-row">
            <label for="title">หัวข้อ</label>
            <span class="counter" id="title-count">0/120</span>
          </div>
          <input id="title" name="title" type="text" required maxlength="120"
            placeholder="พิมพ์หัวข้อให้ชัดเจน เช่น “ไก่กับไข่อะไรเกิดก่อนกัน”" />
        </div>

        <!-- รายละเอียด -->
        <div class="field">
          <div class="label-row">
            <label for="body">รายละเอียด</label>
            <span class="counter" id="body-count">0</span>
          </div>
          <textarea id="body" name="body" rows="8" required
            placeholder="เล่ารายละเอียด ปัญหาที่เจอ หรือสิ่งที่ลองทำมาแล้ว…"></textarea>
        </div>

        <!-- ปุ่ม -->
        <div class="actions">
          <a class="btn" href="/community">ยกเลิก</a>
          <button class="btn primary" type="submit" id="submit-btn">โพสต์</button>
        </div>
      </form>
    </section>
  </main>

  <script>
    (function () {
      const $ = (s, root = document) => root.querySelector(s);
      const title = $('#title');
      const body = $('#body');
      const tCount = $('#title-count');
      const bCount = $('#body-count');
      const form = $('#thread-form');
      const submit = $('#submit-btn');


      // autosize textarea
      function autosize(el) {
        el.style.height = 'auto';
        el.style.height = el.scrollHeight + 'px';
      }

      // events
      ['input', 'change'].forEach(evt => {
        title.addEventListener(evt, updateCounters);
        body.addEventListener(evt, () => { updateCounters(); autosize(body); });
      });

      // Ctrl/⌘ + Enter ส่งฟอร์ม
      body.addEventListener('keydown', e => {
        if ((e.ctrlKey || e.metaKey) && e.key === 'Enter') {
          e.preventDefault();
          form.requestSubmit();
        }
      });

      // กันกดซ้ำ
      form.addEventListener('submit', () => {
        submit.disabled = true;
        submit.textContent = 'กำลังโพสต์...';
      });

      // init
      updateCounters();
      autosize(body);
    })();
  </script>
</body>

</html>